<body>
    <div class="container">
        <header>
            <h1>Das deutsche Gesundheitssystem</h1>
            <p>Eine interaktive Lernumgebung für S2 Wilhelm Gymnasium</p>
        </header>
        
        <main>
            <section id="intro">
                <h2>Willkommen zum Gesundheitsspiel!</h2>
                <p>Du bist ein Politiker im deutschen Gesundheitssystem. Deine Aufgabe: Entscheide, wie die Ressourcen verteilt werden sollen.</p>
                <p>In diesem Spiel wirst du verschiedene Herausforderungen erleben, die das deutsche Gesundheitssystem heute bewältigen muss.</p>
                <button onclick="startGame()">Spiel starten</button>
            </section>
            
            <section id="game" style="display: none;">
                <h2>Deine Entscheidungen</h2>
                <div class="game-stats">
                    <div class="stat">
                        <span>Geld:</span>
                        <progress id="money-bar" value="100" max="100"></progress>
                        <span id="money-value">100%</span>
                    </div>
                    <div class="stat">
                        <span>Qualität:</span>
                        <progress id="quality-bar" value="80" max="100"></progress>
                        <span id="quality-value">80%</span>
                    </div>
                    <div class="stat">
                        <span>Zugänglichkeit:</span>
                        <progress id="access-bar" value="70" max="100"></progress>
                        <span id="access-value">70%</span>
                    </div>
                </div>
                
                <div id="scenario">
                    <h3>Neues Szenario</h3>
                    <p id="scenario-text">Ein neuer medizinischer Fortschritt wird entwickelt, der die Behandlung von Krebs verbessern könnte. Allerdings ist er sehr teuer.</p>
                    <div class="choices">
                        <button onclick="makeChoice(0)">1. Investiere in den Fortschritt - Risiko: Qualität sinkt</button>
                        <button onclick="makeChoice(1)">2. Investiere nicht - Risiko: Zugänglichkeit sinkt</button>
                        <button onclick="makeChoice(2)">3. Finde einen Kompromiss - Risiko: Geld wird reduziert</button>
                    </div>
                </div>
                
                <div id="result" style="display: none;">
                    <h3>Ergebnis</h3>
                    <p id="result-text">Deine Entscheidung hat Auswirkungen auf das Gesundheitssystem...</p>
                    <button onclick="nextScenario()">Weiter zum nächsten Szenario</button>
                </div>
            </section>
        </main>
        
        <footer>
            <p>Erstellt für S2 Wilhelm Gymnasium | Das deutsche Gesundheitssystem</p>
        </footer>
    </div>
    
    <script>
        let gameStarted = false;
        let currentScenario = 0;
        let stats = {
            money: 100,
            quality: 80,
            access: 70
        };

        const scenarios = [
            {
                text: "Ein neuer medizinischer Fortschritt wird entwickelt, der die Behandlung von Krebs verbessern könnte. Allerdings ist er sehr teuer.",
                choices: [
                    { text: "Investiere in den Fortschritt - Risiko: Qualität sinkt", effect: { money: -10, quality: -15, access: 5 } },
                    { text: "Investiere nicht - Risiko: Zugänglichkeit sinkt", effect: { money: 5, quality: 10, access: -20 } },
                    { text: "Finde einen Kompromiss - Risiko: Geld wird reduziert", effect: { money: -20, quality: 5, access: 5 } }
                ]
            },
            {
                text: "Die Bevölkerung altert stark. Es fehlen Fachärzte für die Behandlung von altersbedingten Erkrankungen.",
                choices: [
                    { text: "Erhöhe die Ausbildung von Fachärzten - Risiko: Geld wird reduziert", effect: { money: -25, quality: 15, access: 10 } },
                    { text: "Fördere Telemedizin - Risiko: Qualität sinkt", effect: { money: 5, quality: -10, access: 20 } },
                    { text: "Erhöhe die Bezahlung für Ärzte - Risiko: Geld wird reduziert", effect: { money: -30, quality: 5, access: 15 } }
                ]
            },
            {
                text: "Es gibt eine Epidemie von Grippe. Das Gesundheitssystem ist überlastet.",
                choices: [
                    { text: "Stellen Sie mehr medizinisches Personal ein - Risiko: Geld wird reduziert", effect: { money: -30, quality: 10, access: 15 } },
                    { text: "Fördern Sie Impfungen - Risiko: Qualität sinkt", effect: { money: 5, quality: -20, access: 25 } },
                    { text: "Erhöhen Sie die Ressourcen für Notfälle - Risiko: Geld wird reduziert", effect: { money: -25, quality: 5, access: 10 } }
                ]
            }
        ];

        function startGame() {
            gameStarted = true;
            document.getElementById('intro').style.display = 'none';
            document.getElementById('game').style.display = 'block';
            nextScenario();
        }

        function makeChoice(choiceIndex) {
            const scenario = scenarios[currentScenario];
            const choice = scenario.choices[choiceIndex];
            
            // Anwenden der Effekte
            stats.money = Math.max(0, Math.min(100, stats.money + choice.effect.money));
            stats.quality = Math.max(0, Math.min(100, stats.quality + choice.effect.quality));
            stats.access = Math.max(0, Math.min(100, stats.access + choice.effect.access));
            
            // Aktualisieren der Anzeige
            updateStats();
            
            // Ergebnis anzeigen
            document.getElementById('scenario').style.display = 'none';
            document.getElementById('result').style.display = 'block';
            document.getElementById('result-text').textContent = "Deine Entscheidung hat Auswirkungen auf das Gesundheitssystem. Du hast " + choice.text + ".";
        }

        function nextScenario() {
            if (currentScenario < scenarios.length - 1) {
                currentScenario++;
                const scenario = scenarios[currentScenario];
                document.getElementById('scenario-text').textContent = scenario.text;
                document.getElementById('result').style.display = 'none';
                document.getElementById('scenario').style.display = 'block';
            } else {
                // Spiel beendet
                document.getElementById('scenario').style.display = 'none';
                document.getElementById('result').style.display = 'block';
                document.getElementById('result-text').textContent = "Das Spiel ist beendet. Du hast folgende Werte erreicht: Geld: " + stats.money + "%, Qualität: " + stats.quality + "%, Zugänglichkeit: " + stats.access + "%.";
            }
        }

        function updateStats() {
            document.getElementById('money-bar').value = stats.money;
            document.getElementById('money-value').textContent = stats.money + '%';
            document.getElementById('quality-bar').value = stats.quality;
            document.getElementById('quality-value').textContent = stats.quality + '%';
            document.getElementById('access-bar').value = stats.access;
            document.getElementById('access-value').textContent = stats.access + '%';
        }
    </script>
</body>
</html>
